<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo list </title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%= kindOfDay%></h1>
    </div>
    <div class="box">
        <%newTodo.forEach(function(each){%>
            <form id="" action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="done" id="delete" value="<%=each._id%>"  class="checkBox" onchange="this.form.submit()">
                    <p><%=each.name%></p>    
                </div>
                <input type="hidden" name="listname"  value="<%=kindOfDay%>"></form>
            </form>
            
        <%});%>
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="new item" id="">
            <button type="submit" name="btn" value="<%= kindOfDay %>">+</button>
        </form>
    </div>
    
    
    
    
</body>
</html>